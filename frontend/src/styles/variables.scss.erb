// _variables.scss

// Color Palette
$primary-color: #695db0;      // Navbar background
$secondary-color: #403b72;    // Border and accents
$hover-color: #fe7d04;        // Active and hover states
$text-color: #d1d3d2;         // General text
$light-color: #f2f2f2;        // Light text (buttons, highlights)

// Button Colors
$main-button: #13bd7e;
$main-button-hover: darken(#13bd7e, 20%);

$control-button: #fff200;
$control-button-hover: darken(#fff200, 20%);

$negative-button: #f33f46;
$negative-button-hover: darken(#f33f46, 20%);


// Shadows
$shadow-dark: #1b1b3a;
$shadow-light: #4a4a8a;

// Font Families
$font-main: 'MS Sans Serif', 'Courier New', monospace;
$font-secondary: 'Gamecube', sans-serif;

// Spacing
$padding-small: 10px;
$padding-large: 20px;
$margin-small: 10px;
$margin-large: 20px;

@font-face {
    font-family: 'Gamecube';
    src: asset-url('GameCube.woff2') format('woff2');
    font-weight: normal;
    font-style: normal;
}
